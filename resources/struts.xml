		<!-- ▲▲▲▲▲▲▲▲▲▲自定义拦截器▲▲▲▲▲▲▲▲▲▲ -->
		<!-- 定义全局Result -->
		<global-results>
			<!-- 当返回login视图名时，转入登录页面 -->
			<result name="login">/login.jsp</result>
		</global-results>

		<!-- Hello worldのサンプルアクション -->
		<action name="process" class="com.beautyred.action.ProcessAction"
			method="execute">
			<result name="success">/WEB-INF/view/result.jsp</result>
			<result name="faild">/WEB-INF/view/input.jsp</result>
		</action>
		<action name="loginEntry" class="com.beautyred.action.LoginAction"
			method="execute">
			<result name="success">/WEB-INF/view/input.jsp</result>
			<result name="faild">/login.jsp</result>
		</action>
		<action name="toRegister" class="com.beautyred.action.ToRegister"
			method="execute">
			<result name="success">/WEB-INF/view/register.jsp</result>
		</action>
		<action name="register" class="com.beautyred.action.RegisterAction"
			method="execute">
			<result name="success">/WEB-INF/view/register.jsp</result>
			<result name="faild">/WEB-INF/view/register.jsp</result>
		</action>
		<action name="to_top" class="com.beautyred.action.TopAction"
			method="execute">
			<result name="success">/WEB-INF/view/top.jsp</result>
		</action>
	</package>
</struts>